/* pages/login/login.wxss */

.wrap {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background-color: white;
}

.loge {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.loge image {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 30rpx;
}

.login {
  width: 100%;
  border-top: 1rpx solid gainsboro;
}

.login form {
  display: flex;
  width: 100%;
  flex-direction: column;
}

form .username, .pwd {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  align-items: center;
  font-size: 35rpx;
  border-bottom: 1rpx solid gainsboro;
  margin-left: 20rpx;
}

form .username input {
  flex: 5
}

form .pwd input{
  flex: 5
}
form label{
  flex:1
}
.errmsg{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: rgba(241, 41, 41, 0.863)
}
button{
  height: 100rpx;
  /* 下面这行是个巨坑 6*/
  width: 100% !important;  
  line-height: 60rpx;
  background-color: rgb(0, 255, 98);
  color:white;
  padding-top: 14rpx;
}
