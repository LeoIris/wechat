swiper{
  height: 375rpx;
  width: 96%;
  align-self: center;
}
swiper image{
  width: 100%;
}
.menu{
  margin-top: 5rpx;
  display: flex;
  width: 96%;
  flex-direction: row;
  flex-wrap: wrap;
  border: 1rpx solid rgb(158, 102, 102);
  align-self: center;
  border-radius: 15rpx;
  padding: 10rpx 0;
}
.menusub{
  display:flex;
  width: 25%;
  flex-direction: column;
  align-items: center;
  align-content: space-around
}
.menu image{
  width: 100rpx;
  height: 100rpx; 
}
.products{
  display: flex;
  flex-wrap: wrap;
  width: 96%;
  padding-bottom: 120rpx;
  align-self: center
}
.productsub {
  display: flex;
  flex-direction: column;
  width: 49%;
  align-items: center;
  border-radius: 25rpx;
  align-content: space-between;
  margin-left: 1%;
  margin-top: 10rpx;
  background: white;

}
.products image{
  width: 100%;
  height: 300rpx;
  background: white;
}
.productsinfo{
  display: flex;
  width: 100%;
  flex-direction: row;
  /* align-content: space-around; */
  justify-content:space-around;
  background-color: rgb(240, 238, 238);
}
.productsinfo .price{
  color: rgb(230, 86, 86) 
}
